<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="www.fiberathome.com.parkingapp">
    <!-- gps hardware permission -->
    <uses-feature android:name="android.hardware.location.gps" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <!-- internet permission -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- location permission -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- camera permission -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <!-- storage permission -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <application
        android:name=".base.ParkingApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:testOnly="false"
        tools:ignore="AllowBackup"
        tools:targetApi="q">
        <activity android:name=".ui.getDiscount.GetDiscountActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar"/>

        <activity android:name=".ui.followUs.FollowUsActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar"/>

        <activity android:name=".ui.ratingReview.RatingReviewActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar"/>

        <activity android:name=".ui.profile.ProfileActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar"/>

        <activity android:name=".ui.law.LawActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar"/>

        <activity android:name=".ui.booking.newBooking.BookingActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar"/>

        <activity android:name=".ui.parking.ParkingActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/AppTheme.DefaultActionBar"/>

        <activity
            android:name=".ui.home.HomeActivity"
            android:screenOrientation="unspecified"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.changePassword.newPassword.ChangeNewPasswordActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.changePassword.ChangePasswordActivityForOTPNew"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.permission.PermissionActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.permission.LocationPermissionActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.location.LocationActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.search.SearchActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.start.StartActivity"
            android:label="@string/app_name"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar">
        </activity>

        <activity
            android:name=".ui.splash.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.signUp.SignUpActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.verifyPhone.VerifyPhoneActivity"
            android:parentActivityName=".ui.signIn.LoginActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.signIn.LoginActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.forgetPassword.ForgetPasswordActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.reserveSpot.ReserveSpotActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.privacyPolicy.PrivacyPolicyActivity"
            android:launchMode="singleTop"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.termsConditions.TermsConditionsActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.settings.SettingsActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DefaultActionBar" />

        <activity
            android:name=".ui.settings.LanguageSettingActivity"
            android:label="@string/language_settings" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/ic_launcher" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

        <!-- <receiver android:name=".utils.GeoFenceBroadcastReceiver"/>-->
        <receiver android:name=".module.notification.NotificationPublisher" />

        <service
            android:name=".module.gps.GPSTracker"
            tools:ignore="Instantiatable" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>