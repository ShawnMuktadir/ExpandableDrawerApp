<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MapActivity">

        <Button
            android:id="@+id/nearest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/find_nearest"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/white_border"
            android:elevation="10dp">

            <fragment
                android:id="@+id/autocomplete_fragment"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim50"
            android:layout_marginTop="@dimen/dim10"
            android:layout_marginRight="@dimen/dim10"
            android:layout_marginLeft="@dimen/dim10"
            android:elevation="@dimen/dim10"
            android:visibility="gone"
            android:background="@drawable/white_border"
            android:id="@+id/relativeLayout1">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/ic_magnify"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/quantum_ic_search_grey600_24"
                android:tint="@color/black"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/ic_magnify"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimTex15"
                android:textColor="#000"
                android:id="@+id/input_search"
                android:background="@null"
                android:hint="Where To?"
                android:imeOptions="actionSearch"/>

        </RelativeLayout>
    </fragment>

    <ImageButton
        android:id="@+id/currentLocationImageButton"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="15dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/current_location_vector_icon" />

    <LinearLayout
        android:id="@+id/linearLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutNameCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@color/whiteColor"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewParkingAreaCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/demo_number"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/font_size_25"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="@string/parking_slots"
                    android:textColor="@color/whiteColor"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dim5"
                android:orientation="vertical"
                android:layout_weight="1.5"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/dim2">

                <LinearLayout
                    android:id="@+id/linearLayoutParkingAreaName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewParkingAreaName"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim2"
                        android:maxLines="2"
                        android:padding="@dimen/dim3"
                        android:text="@string/parking_area_name"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/textViewParkingDistance"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:gravity="end"
                        android:padding="@dimen/dim3"
                        android:text="@string/distance"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutParkingAvailability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewParkingAreaAddress"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayoutParkingAreaName"
                        android:padding="@dimen/dim3"
                        android:text="@string/subject_to_availability"
                        android:textColor="@color/blue"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewParkingTravelTime"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:visibility="visible"
                        android:gravity="end"
                        android:padding="@dimen/dim3"
                        android:text="@string/time"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dim3"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:padding="@dimen/dim3"
                app:srcCompat="@drawable/ic_back" />

            <Button
                android:id="@+id/btnGetDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/get_direction"
                android:background="#000"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSearchBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutSearchNameCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@color/whiteColor"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSearchParkingAreaCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/demo_number"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/font_size_25"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="@string/parking_slots"
                    android:textColor="@color/whiteColor"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dim5"
                android:orientation="vertical"
                android:layout_weight="1.5"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/dim2">

                <LinearLayout
                    android:id="@+id/linearLayoutSearchParkingAreaName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSearchParkingAreaName"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim2"
                        android:maxLines="2"
                        android:padding="@dimen/dim3"
                        android:text="@string/parking_area_name"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/textViewSearchParkingDistance"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:gravity="end"
                        android:padding="@dimen/dim3"
                        android:text="@string/distance"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutSearchParkingAvailability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSearchParkingAreaAddress"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayoutParkingAreaName"
                        android:padding="@dimen/dim3"
                        android:text="@string/subject_to_availability"
                        android:textColor="@color/blue"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewSearchParkingTravelTime"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:gravity="end"
                        android:padding="@dimen/dim3"
                        android:text="@string/time"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dim3"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageViewSearchBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:padding="@dimen/dim3"
                app:srcCompat="@drawable/ic_back" />

            <Button
                android:id="@+id/btnSearchGetDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/get_direction"
                android:background="#000"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutMarkerBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutMarkerNameCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@color/whiteColor"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewMarkerParkingAreaCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/demo_number"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/font_size_25"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="@string/parking_slots"
                    android:textColor="@color/whiteColor"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dim5"
                android:orientation="vertical"
                android:layout_weight="1.5"
                android:background="@android:color/white"
                android:gravity="center"
                android:padding="@dimen/dim2">

                <LinearLayout
                    android:id="@+id/linearLayoutMarkerParkingAreaName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewMarkerParkingAreaName"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim2"
                        android:maxLines="2"
                        android:padding="@dimen/dim3"
                        android:text="@string/parking_area_name"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/textViewMarkerParkingDistance"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:gravity="end"
                        android:padding="@dimen/dim3"
                        android:text="@string/distance"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutMarkerParkingAvailability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewMarkerParkingAreaAddress"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayoutParkingAreaName"
                        android:padding="@dimen/dim3"
                        android:text="@string/subject_to_availability"
                        android:textColor="@color/blue"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewMarkerParkingTravelTime"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:gravity="end"
                        android:padding="@dimen/dim3"
                        android:text="@string/time"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dim3"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageViewMarkerBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:padding="@dimen/dim3"
                app:srcCompat="@drawable/ic_back" />

            <Button
                android:id="@+id/btnMarkerGetDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/get_direction"
                android:background="#000"
                android:textColor="#fff" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>