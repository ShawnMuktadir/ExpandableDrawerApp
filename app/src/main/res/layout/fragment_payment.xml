<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:weightSum="2">

            <ImageView
                android:id="@+id/ivBackArrow"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="start|center"
                android:layout_weight="0.2"
                android:contentDescription="@string/army_vehicle_arrow"
                android:gravity="start"
                android:padding="@dimen/dim2"
                app:srcCompat="@drawable/ic_action_back" />

            <TextView
                android:id="@+id/action_bar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.8"
                android:maxLines="2"
                android:padding="@dimen/dim2"
                android:text="@string/booking_payment"
                android:textColor="@color/black"
                android:textSize="@dimen/dimTex16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dim5">

            <TextView
                android:id="@+id/topText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dim5"
                android:gravity="center"
                android:padding="@dimen/dim5"
                android:text="@string/your_booking"
                android:textSize="@dimen/dimTex16" />

            <TextView
                android:id="@+id/tvParkingSlotName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dim5"
                android:layout_marginTop="@dimen/dim5"
                android:layout_marginEnd="@dimen/dim5"
                android:layout_marginBottom="@dimen/dim5"
                android:padding="@dimen/dim5"
                android:text="@string/parking_spot"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/border1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dim2"
                android:background="#978080"
                android:padding="@dimen/dim5" />

            <RelativeLayout
                android:id="@+id/second_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim5"
                android:padding="@dimen/dim5">

                <TextView
                    android:id="@+id/tvArrivedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dim5"
                    android:text="@string/arrived_text"
                    android:textSize="@dimen/dimTex15" />

                <TextView
                    android:id="@+id/tvDepartureTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvArrivedTime"
                    android:padding="@dimen/dim5"
                    android:text="@string/departure_text"
                    android:textSize="@dimen/dimTex15" />

                <TextView
                    android:id="@+id/tvDifferenceTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dim2"
                    android:layout_marginTop="@dimen/dim2"
                    android:layout_marginEnd="@dimen/dim2"
                    android:layout_marginBottom="@dimen/dim2"
                    android:padding="@dimen/dim5"
                    android:text=""
                    android:textSize="15sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/eachHourText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim5"
                    android:layout_weight="1"
                    android:padding="@dimen/dim5"
                    android:text="@string/each_hour"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimTex15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEachHourBill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim5"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="@dimen/dim5"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/border2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="#978080" />

            <TextView
                android:id="@+id/tvPromo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/dim5"
                android:background="@drawable/border_style"
                android:gravity="center"
                android:padding="@dimen/dim5"
                android:text="@string/use_promo"
                android:textSize="@dimen/dimTex15"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvSubTotalText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim5"
                    android:layout_marginTop="@dimen/dim5"
                    android:layout_weight="1"
                    android:padding="@dimen/dim5"
                    android:text="@string/subtotal_parking"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim5"
                    android:layout_marginTop="@dimen/dim5"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="@dimen/dim5"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvDiscountStaticText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim5"
                    android:layout_marginTop="@dimen/dim5"
                    android:layout_weight="1"
                    android:padding="@dimen/dim5"
                    android:text="@string/discount"
                    android:textSize="@dimen/dimTex14" />

                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim5"
                    android:layout_marginTop="@dimen/dim5"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="@dimen/dim5"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvTotalStaticText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim5"
                    android:layout_marginTop="@dimen/dim2"
                    android:layout_weight="1"
                    android:padding="@dimen/dim5"
                    android:text="@string/total"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim5"
                    android:layout_marginTop="@dimen/dim5"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="@dimen/dim5"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/dimTex15"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/border3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="#9C9696" />

            <TextView
                android:id="@+id/disclaimerTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:padding="3dp"
                android:text="@string/loream_ipsum"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/termConWrapLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dim2"
                android:orientation="vertical"
                android:padding="@dimen/dim5">

                <TextView
                    android:id="@+id/tvTermCondition"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/border_style"
                    android:gravity="center"
                    android:text="@string/t_amp_c"
                    android:textSize="@dimen/dimTex14"
                    android:textStyle="bold" />


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dim5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@android:color/black"
                    android:padding="@dimen/dim10"
                    android:text="@string/online_pay"
                    android:textColor="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/btnScratchCard"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btnScratchCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/blue"
                    android:padding="@dimen/dim10"
                    android:text="@string/scratchCard"
                    android:textColor="@android:color/white"
                    app:layout_constraintEnd_toStartOf="@+id/btnPay"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>