<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvHourLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim5"
    android:background="@drawable/white_border"
    android:padding="@dimen/dim3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivTime"
            android:layout_width="@dimen/dim25"
            android:layout_height="@dimen/dim25"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dim5"
            android:contentDescription="@string/image"
            android:src="@drawable/ic_time_clock" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:text="@string/time"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/dimTex16"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>

