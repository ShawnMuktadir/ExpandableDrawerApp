<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvHourLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dim5"
    android:padding="@dimen/dim3"
    app:cardCornerRadius="@dimen/dim5"
    app:cardElevation="@dimen/dim5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivTime"
            android:layout_width="@dimen/dim25"
            android:layout_height="@dimen/dim25"
            android:layout_gravity="center"
            android:contentDescription="@string/image"
            android:layout_margin="@dimen/dim5"
            android:src="@drawable/ic_time_clock" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:text="@string/time"
            android:textStyle="bold"
            android:textSize="@dimen/dimTex16"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
