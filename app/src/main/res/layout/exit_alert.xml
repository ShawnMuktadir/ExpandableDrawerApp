<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <View
        android:id="@+id/outside_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent_black" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_exit"
        android:layout_width="@dimen/dim200"
        android:layout_height="@dimen/dim150"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dim2"
        app:cardCornerRadius="@dimen/dim10"
        app:cardBackgroundColor="@color/color_selector_red"
        app:cardElevation="@dimen/dim2"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/exit_message"
            android:textColor="@color/color_selector_white"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>
