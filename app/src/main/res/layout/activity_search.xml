<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim3"
    android:layout_margin="@dimen/dim3"
    tools:context=".view.activity.search.SearchActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_5sdp">

            <ImageView
                android:id="@+id/imageViewCross"
                android:layout_width="@dimen/dim30"
                android:layout_height="@dimen/dim30"
                android:layout_alignParentStart="true"
                android:padding="@dimen/dim3"
                app:srcCompat="@drawable/ic_clear" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Parking Spot"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/dim5"
            android:padding="@dimen/dim5">

            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_15ssp"
                android:padding="@dimen/dim5"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:hint="Search..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:background="@drawable/white_border"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/ivClearSearchText"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_clear"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

    </LinearLayout>

<!--    <FrameLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@+id/linearLayout">-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSearchPlaces"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout"
            android:layout_margin="@dimen/dim5"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <TextView
            android:id="@+id/tvEmptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/no_data_available"
            android:visibility="gone" />


<!--    </FrameLayout>-->



</RelativeLayout>