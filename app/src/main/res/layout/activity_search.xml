<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gloss_white"
    android:orientation="vertical"
    tools:context=".view.search.SearchActivity">

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">

            <ImageView
                android:id="@+id/imageViewCross"
                android:layout_width="@dimen/dim35"
                android:layout_height="@dimen/dim35"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/ic_clear" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Parking Spot"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">

            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_border"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="@dimen/dim10"
                android:hint="Search..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:padding="@dimen/dim5"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15ssp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/ivClearSearchText"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_clear" />


        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSearchPlaces"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <LinearLayout
            android:id="@+id/linearLayoutEmptyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dim10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewSearchPlace"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_search_maps"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvEmptyView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/imageViewSearchPlace"
                android:gravity="center"
                android:text="@string/no_data_available"
                android:textColor="@color/black"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

<!--    </ScrollView>-->
</RelativeLayout>