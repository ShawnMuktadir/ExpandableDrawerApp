<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.fiberathome.com.parkingapp.view.parking.ParkingFragment">

<!--    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
<!--        android:id="@+id/swipeRefreshLayout"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content">-->

        <LinearLayout
            android:id="@+id/linearLayoutParkingFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7sdp"
                android:padding="@dimen/dim3"
                android:text="@string/welcome_to_locc_parking"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/_12ssp"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/dim5"
                android:background="@color/gloss_white"
                android:padding="@dimen/dim2">

                <EditText
                    android:id="@+id/editTextParking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/dimTex15"
                    android:padding="@dimen/dim5"
                    android:layout_margin="@dimen/dim5"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="@dimen/dim10"
                    android:textColor="@android:color/black"
                    android:textStyle="normal"
                    android:hint="Search..."
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:background="@drawable/white_border"
                    android:maxLines="1" />

                <ImageView
                    android:id="@+id/ivClearSearchText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dim6"
                    app:srcCompat="@drawable/ic_clear"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewParking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dim3"
                android:background="?android:attr/selectableItemBackground"
                android:clipToPadding="false"
                android:elevation="@dimen/dim3"
                android:overScrollMode="never"
                android:padding="@dimen/dim3"
                android:scrollbars="vertical" />
        </LinearLayout>

<!--    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->

    <TextView
        android:id="@+id/textViewNoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_record_found"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linearLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:background="@color/whiteColor"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewParkingAreaCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/demo_number"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/font_size_25"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/darker_gray"
                    android:gravity="center"
                    android:text="@string/parking_slots"
                    android:textColor="@color/whiteColor"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dim5"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dim2">

                <LinearLayout
                    android:id="@+id/linearLayoutParkingAreaName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textViewParkingAreaName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim2"
                        android:layout_weight="1.5"
                        android:maxLines="1"
                        android:padding="@dimen/dim3"
                        android:text="@string/parking_area_name"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/textViewParkingDistance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:maxLines="1"
                        android:padding="@dimen/dim3"
                        android:text="@string/distance"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutParkingAvailability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/textViewParkingAreaAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayoutParkingAreaName"
                        android:layout_weight="1.5"
                        android:padding="@dimen/dim3"
                        android:text="@string/subject_to_availability"
                        android:textColor="@color/blue"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textViewParkingTravelTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:maxLines="1"
                        android:padding="@dimen/dim3"
                        android:text="@string/parking_time"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dim3"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageViewBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:padding="@dimen/dim3"
                app:srcCompat="@drawable/ic_back" />

            <Button
                android:id="@+id/btnGetDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.7"
                android:background="#000"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/get_direction"
                android:textColor="#fff" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

