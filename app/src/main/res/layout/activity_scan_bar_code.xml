<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dim10">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnAction"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/txtBarcodeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/dim10"
        android:text="@string/no_barcode_detected"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/btnAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:maxLines="2"
        android:paddingStart="@dimen/dim5"
        android:paddingEnd="@dimen/dim5"
        android:text="@string/scan_text"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/dimTex16"
        app:drawableStartCompat="@drawable/ic_scanner"
        app:drawableTint="@color/black" />


</RelativeLayout>