<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_otp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar xmlns:local="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dim20">

            <ImageView
                android:layout_width="@dimen/dim150"
                android:layout_height="@dimen/dim150"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dim15"
                android:src="@drawable/ic_logo_original"
                android:visibility="visible" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim15"
                android:gravity="center_horizontal"
                android:text="@string/msg_sit_back"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimTex15" />

            <TextView
                android:id="@+id/tv_count_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim15"
                android:gravity="center_horizontal"
                android:text="02:03"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimTex15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim15"
                android:gravity="center_horizontal"
                android:text="@string/msg_manual_otp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimTex12" />

            <LinearLayout
                android:id="@+id/pin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="5">

                <EditText
                    android:id="@+id/pin_first_edittext"
                    style="@style/pin_edittext_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textCursorDrawable="@null"
                    android:contentDescription="@string/pin_content_desc" />

                <EditText
                    android:id="@+id/pin_second_edittext"
                    style="@style/pin_edittext_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textCursorDrawable="@null"
                    android:contentDescription="@string/pin_content_desc" />

                <EditText
                    android:id="@+id/pin_third_edittext"
                    style="@style/pin_edittext_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textCursorDrawable="@null"
                    android:contentDescription="@string/pin_content_desc" />

                <EditText
                    android:id="@+id/pin_forth_edittext"
                    style="@style/pin_edittext_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textCursorDrawable="@null"
                    android:contentDescription="@string/pin_content_desc" />

                <!--  <EditText-->
                <!--      android:id="@+id/pin_fifth_edittext"-->
                <!--      style="@style/pin_edittext_style"-->
                <!--      android:layout_width="wrap_content"-->
                <!--      android:layout_height="wrap_content"-->
                <!--      android:contentDescription="@string/pin_content_desc" />-->
            </LinearLayout>

            <EditText
                android:id="@+id/inputOtp"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:contentDescription="@string/pin_content_desc"
                android:cursorVisible="false"
                android:gravity="center_horizontal"
                android:maxLength="4"
                android:password="true"
                android:textColor="#00000000" />

            <!--            <EditText-->
            <!--                android:id="@+id/inputOtp"-->
            <!--                android:layout_width="120dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:background="@android:color/white"-->
            <!--                android:fontFamily="sans-serif-light"-->
            <!--                android:gravity="center"-->
            <!--                android:hint="@string/lbl_enter_otp"-->
            <!--                android:inputType="number"-->
            <!--                android:maxLength="6"-->
            <!--                android:padding="10dp"-->
            <!--                android:textCursorDrawable="@null"-->
            <!--                android:textSize="18sp" />-->

            <Button
                android:id="@+id/btn_verify_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim25"
                android:background="@color/black"
                android:padding="@dimen/dim10"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimTex14" />

            <Button
                android:id="@+id/btnResendOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim5"
                android:background="@color/black"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/resend_otp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/dimTex12"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>